<?xml version="1.0" ?>
<container xmlns="http://symfony.com/schema/dic/services"
           xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
           xsi:schemaLocation="http://symfony.com/schema/dic/services http://symfony.com/schema/dic/services/services-1.0.xsd">

    <services>
        <!-- Shopware6 AutocompleteRequestDefinition model for autocomplete requests -->
        <service id="Boxalino\IntelligenceFramework\Service\Api\Request\Definition\AutocompleteRequestDefinitionInterface"
                 class="Boxalino\IntelligenceFramework\Service\Api\Request\Definition\AutocompleteRequestDefinition"
                 parent="Boxalino\IntelligenceFramework\Service\Api\Request\RequestDefinitionInterface"/>

        <!-- Shopware6 definition of the autocomplete context used for the setup -->
        <service id="boxalino.api.request.context.autocomplete" class="Boxalino\IntelligenceIntegration\Framework\Request\Context\Autocomplete"
                 parent="Boxalino\IntelligenceFramework\Framework\Request\ShopwareApiContextInterface">
            <call method="setRequestDefinition">
                <argument type="service" id="Boxalino\IntelligenceFramework\Service\Api\Request\Definition\AutocompleteRequestDefinitionInterface"/>
            </call>
            <call method="setWidget"><argument>autocomplete</argument></call>
            <call method="setHitCount"><argument>10</argument></call>
            <call method="setSuggestionCount"><argument>5</argument></call>
            <!-- <call method="setGroupBy"><argument>id</argument></call>-->
        </service>

    </services>
</container>
